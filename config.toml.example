# Expense Tracker v3 configuration
# Copy this file to config.toml and customize for your setup

[general]
output_dir = "output"
enrichment_cache_dir = "enrichment-cache"

[transfer_detection]
keywords = ["PAYMENT", "AUTOPAY", "ONLINE PAYMENT", "PAYOFF"]
date_window_days = 5

[llm]
provider = "anthropic"          # "anthropic" or "none"
model = "claude-sonnet-4-20250514"
api_key_env = "ANTHROPIC_API_KEY"  # Name of env var containing the API key

# Account definitions
# Add one [[accounts]] section for each bank/credit card you want to track
[[accounts]]
name = "Chase Credit Card"
institution = "chase"
parser = "chase"
account_type = "credit_card"
input_dir = "input/chase"

[[accounts]]
name = "Capital One Credit Card"
institution = "capital_one"
parser = "capital_one"
account_type = "credit_card"
input_dir = "input/capital-one"

[[accounts]]
name = "Elevations Credit Union"
institution = "elevations"
parser = "elevations"
account_type = "checking"
input_dir = "input/elevations"

# Amazon enrichment accounts
# Each account gets its own browser session and login.
# Add one [[enrichment.amazon]] section per Amazon account.
[[enrichment.amazon]]
label = "primary"

[[enrichment.amazon]]
label = "secondary"

